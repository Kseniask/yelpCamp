<%- include("../partials/header") %>
<div class="container" style="margin: 20px auto;">
  <div class="row"></div>
    <h1 class="w-100" style="text-align: center;">
      Add new comment to <%= campground.name %>
    </h1>
    <div style="width:40%;margin:20px auto">
      <form method="post" action="/campgrounds/<%= campground._id %>/comments">
        <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="comment[text]"
          placeholder="Text"
        /></div>
        <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="comment[author]"
          value="<%= currentUser.username%>"
          hidden
          placeholder="Name"
        /></div>
        
        <button class="btn btn-block btn-primary btn-lg">Submit</button>
      </form>

      <a class="btn btn-block btn-sm btn-default" href="/campgrounds">Go Back </a>
    </div>
  </div>
  <%- include("../partials/footer") %>
</div>
