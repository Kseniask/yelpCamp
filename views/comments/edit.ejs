<%- include("../partials/header") %>
<div class="container" style="margin: 20px auto;">
  <div class="row"></div>
    <h1 class="w-100" style="text-align: center;">
      Edit comment
    </h1>
    <div style="width:40%;margin:20px auto">
      <form method="post" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT">
        <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="comment[text]"
          value = "<%=comment.text%>"
        /></div>
        <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="comment[author]"
          value = "<%=comment.author%>"
          hidden
          placeholder="Name"
        /></div>
        
        <button class="btn btn-block btn-primary btn-lg">Submit</button>
      </form>

      <a class="btn btn-block btn-sm btn-default" href="/campgrounds/<%campground_id%>">Go Back </a>
    </div>
  </div>
  <%- include("../partials/footer") %>
</div>
